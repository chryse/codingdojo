<% provide(:title, "Like Status") %>

<div class="row posts">
	<div class="col-md-4">
		<h3><%= link_to @post.user.name, user_path(@post.user) %> says:</h3>
	</div>
	<div class="col-md-6">
		<h3><%= @post.content %></h3>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<h4>People who liked this post:</h4>
		<table class="table striped">
			<thead>
				<tr>
					<th>Alias</th>
					<th>Name</th>
				</tr>
			</thead>
			<tbody>
				<% @post.users.each do |user| %>
					<tr>
						<td><%= link_to user.alias, user_path(user) %></td>
						<td><%= user.name %> </td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
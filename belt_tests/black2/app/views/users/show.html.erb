<% provide(:title, "User Profile") %>

<div class="row">
	<div class="col-md-6">
		<h3>Name: <%= @user.name %></h3>
		<h3>Alias: <%= @user.alias %></h3>
		<h3>Email: <%= @user.email %></h3>
	</div>
</div>
<hr/>
<div class="row">
	<div class="col-md-6">
		<h3>Total Number of Posts: <%= @total_posts %></h3>
		<h3>Total Number of Likes: <%= @user.posts.count %></h3>
	</div>
</div>
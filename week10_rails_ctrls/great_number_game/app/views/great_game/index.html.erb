<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<h3>Welcome to the Great Number Game!</h3>
			<h4>I am thinking of a number between 1 and 100</h4>
			<h4>Take a number!</h4>
			<% if flash[:error] %>
			<div class="alert alert-danger">
				<%= flash[:error] %>
			</div>
			<% end %>
			<% if flash[:message] %>
			<div class="result">
				<%= flash[:message] %>
			</div>
			<% end %>
			<% if flash[:correct] %>
			<div class="correct text-center">
				<%= flash[:correct] %><br />
				<a href="/reset/">
					<button class="btn btn-primary">Play agina!</button>
				</a>
			</div>
			<% end %>
			<form class="form" action="/guess/" method="post">
				<div class="col-md-12 form-group">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input class="form-control" name="guess" type="text">
				</div>
				<div class="col-md-12 form-group">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-10">
			<h1>Ninja Gold Game</h1>
			<div class="gold">
				<h3>Your Gold</h3>
				<div>
					<span class="yellow"><%= session[:total_gold] %></span>
				</div>
			</div>
		</div>
		<div class="col-md-2 text-right">
			<form method="post" action="/reset" name="reset">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<input type="hidden" name="where" value="reset">
				<button class="btn btn-danger" type="submit">Reset</button>
			</form>
		</div>
	</div>
	<div class="row text-center">
		<div class="col-md-3">
			<div class="farm">
				<h3>Farm</h3>
				<h4>(earns 10-20 golds)</h4>
				<form method="post" action="/process_gold" name="farm">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="where" value="farm">
					<button class="btn btn-primary" type="submit">Find Gold</button>
				</form>
			</div>
		</div>
		<div class="col-md-3">
			<div class="cave">
				<h3>Cave</h3>
				<h4>(earns 5-10 golds)</h4>
				<form method="post" action="/process_gold">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="where" value="cave">
					<button class="btn btn-primary" type="submit">Find Gold</button>
				</form>
			</div>
		</div>
		<div class="col-md-3">
			<div class="house">
				<h3>House</h3>
				<h4>(earns 2-5 golds)</h4>
				<form method="post" action="/process_gold">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="where" value="house">
					<button class="btn btn-primary" type="submit">Find Gold</button>
				</form>
			</div>
		</div>
		<div class="col-md-3">
			<div class="casino">
				<h3>Casino!</h3>
				<h4>(earns/takes 0-50 golds)</h4>
				<form method="post" action="/process_gold">
					<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
					<input type="hidden" name="where" value="casino">

					<button class="btn btn-primary" type="submit">Find Gold</button>
				</form>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<h4>Activities: </h4>
			<div class="result">
				<%
					# insert green and red colors depeding on activity message
					word_pattern = /earned/
					(session[:activities].length-1).downto(0) do |i|
						if(word_pattern.match(session[:activities][i]))
				%>
						<span class="green"><%= session[:activities][i] %></span><br />
				<%
						else
				%>
						<span class="red"><%= session[:activities][i] %></span><br />
				<%
						end
					end
				%>
			</div>
		</div>
	</div>
</div>
<% provide(:title, @user.full_name) %>

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h3><%= @user.full_name %>'s wall <%= render 'follow_form' if signed_in? %></h3>
			<table class="table table-bordered table-hover text-center">
				<tr>
					<td><strong>Name</strong></td>
					<td><%= @user.full_name %></td>
				</tr>
				<tr>
					<td><strong>Email</strong></td>
					<td><%= @user.email %></td>
				</tr>
				<tr>
					<td><strong>Registered at</strong></td>
					<td><%= @user.format_created_date %></td>
				</tr>
			</table>
			<%= render "shared/relationship_info" %>
		</div>
		<div class="col-md-8">
			<h3></h3>

			<% if current_user == @user %>
				<%= render "shared/post_form" %>
			<% end %>

			<% if @user.posts.any? %>
				<h3>Posts (<%= @user.posts.count %>)</h3>
				<%= render @posts %>
				<%= will_paginate @posts %>
			<% end %>
		</div>
	</div>
</div>
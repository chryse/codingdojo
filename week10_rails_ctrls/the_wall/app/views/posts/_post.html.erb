<div class="row message-box">
	<div class="col-md-12 message-head">
		<div class="text-left"><%= link_to post.user.full_name, post.user %> Wrote:</div>
		<div class="text-right">Posted <%= time_ago_in_words(post.created_at) %> ago.
			<% if current_user?(post.user) %>
	      		<%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %>
	    	<% end %>
		</div>
	</div>
	<div class="col-md-12 message-content">
		<%= post.content %>
	</div>
	<div class="col-md-12 comment-content">
		<div class="row">
		<% post.comments.each do |comment| %>
			<div class="col-md-2 text-right">
				<%= link_to comment.user.full_name, comment.user %>
			</div>
			<div class="col-md-7">
				<%= comment.content %>
			</div>
			<div class="col-md-3">
				<%= comment.format_created_date %>
			</div>
		<% end %>
		</div>
	</div>
	<div class="col-md-2 text-right">
		<%= current_user.full_name %>
	</div>
	<div class="col-md-10">
		<%= render "shared/comment_form", data: { post_id: post.id, user_id: current_user.id} %>
	</div>
</div>
<div class="container">
	<div class="row">
		<h1>Listing Users</h1>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.first_name %></td>
					<td><%= user.last_name %></td>
					<td><%= user.email_address %></td>
					<td>
						<a href="/users/show/<%= user.id %>"><button class="btn btn-primary">Show</button></a>
						<a href="/users/<%= user.id %>/edit"><button class="btn btn-warning">Edit</button></a>
						<a href="/users/<%= user.id %>" data-method="delete"><button class="btn btn-danger">Destroy</button></a>
					<td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<a href="/users/new">New User</a>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Edit User</h1>
			<form class="form" action="/users/<%= @user.id %>" method="post">
				<%= render "shared/error_messages" %>
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<!-- <input type="hidden" name="id" value="<%= @user.id %>"> -->
				<input type="hidden" name="_method" value="put">
				<div class="col-sm-12 form-group">
					<label>First Name</label>
					<input type="text" name="user[first_name]" class="form-control" value="<%= @user.first_name %>">
				</div>
				<div class="col-sm-12 form-group">
					<label>Last Name</label>
					<input type="text" name="user[last_name]" class="form-control" value="<%= @user.last_name %>">
				</div>
				<div class="col-sm-12 form-group">
					<label>Email</label>
					<input type="email" name="user[email_address]" class="form-control" value="<%= @user.email_address %>">
				</div>
				<div class="col-sm-12 form-group">
					<label>Password</label>
					<input type="password" name="user[password]" class="form-control" value="<%= @user.password %>">
				</div>
				<div class="col-sm-12 form-group">
					<button type="submit" class="btn btn-primary">Edit</button>
				</div> 
			</form>
			<a href="/users/">Show</a> | <a href="/users/show/<%= @user.id %>">Back</a>
		</div>
	</div>
</div>